- drone.list_of_instructions.each do |progress|
  %li{class: progress[:status] ? 'active' : 'disabled'}
    -if progress[:status]
      = link_to progress[:name], drone_update_activity_path(id: drone.id, message: progress[:name].to_s),method: :post, remote: true
    -else
      %input{disabled: 'disable', type: "checkbox", value: "#{progress[:name].to_s}"}/
    %a{:href => "#"}= progress[:name].capitalize
  - break if progress[:status]
